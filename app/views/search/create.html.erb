<h2>Resultados</h2>
<table class="table">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha de nacimiento</th>
      <th>Telefono</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>	
	<% @patients.each do |patient| %>
		<<tr>
        <td><%= patient.code %></td>
        <td><%= patient.name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.birthdate %></td>
        <td><%= patient.phone %></td>
        <td><%= link_to 'Ver', patient %> | <%= link_to 'Editar', edit_patient_path(patient) %> | <%= link_to 'Eliminar', patient, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
        <% if patient.may_deactivated? %>
        <td><%= link_to 'dar de baja', "/patients/#{patient.id}/baja", method: :put%></td>
        <% end %>
         <% if patient.may_activated? %>
        <td><%= link_to 'dar de alta', "/patients/#{patient.id}/alta", method: :put%></td>
        <% end %>
      </tr>
	<% end %>

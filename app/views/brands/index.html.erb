<div class="panel panel-default">
 <div class="panel-heading">Casa Medica</div>
 <div class="panel-body">
  <table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Contacto</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.address %></td>
        <td><%= brand.phone %></td>
        <td><%= brand.contact %></td>
        <td><%= link_to 'Ver', brand %> | <%= link_to 'Editar', edit_brand_path(brand) %> | <%= link_to 'Eliminar', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>>
      </tr>
    <% end %>
  </tbody>
</table>
  <br>
  <div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
   <p>
    <%= button_to new_brand_path, {method: :get, class: "btn btn-success"} do %>
     <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nueva Casa
    <% end %>
   </p>
  </div>
 </div>
</div>

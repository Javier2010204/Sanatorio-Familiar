<div class="panel panel-default">
 <div class="panel-heading">Casa Medica</div>
 <div class="panel-body">
  <table class="table">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Casa Medica</th>
      <th>Presentacion</th>
      <th>Categoria</th>
      <th>Unidades</th>
      <th>Precio de venta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.code %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.brand.name %></td>
        <td><%= item.unit.name %></td>
        <td><%= item.category.name %></td>
        <td><%= item.stock %></td>
        <td><%= item.sale_price %></td>
        <td><%= link_to 'Ver', item %></td>
        <td><%= link_to 'Editar', edit_item_path(item) %></td>
        <td><%= link_to 'Eliminar', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  <br>
  <div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
   <p>
    <%= button_to new_brand_path, {method: :get, class: "btn btn-success"} do %>
     <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nueva Casa
    <% end %>
   </p>
  </div>
 </div>
</div>

<%= form_with(model: purchase, local: true) do |form| %>
  <% if purchase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
      <% purchase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.collection_select :item_id, @items, :id, :name,
                  {selected: @purchase.item_id, include_blank: 'Seleccione producto'}, 
                  {class: "form-control"} %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :purchase_price %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :purchase_quantity %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

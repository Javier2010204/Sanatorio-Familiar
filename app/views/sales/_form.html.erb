<%= form_with(model: sale, local: true) do |form| %>
  <% if sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number, id: :sale_number %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :sale_date %>
  </div>

  <div class="field">
    <%= form.collection_select :patient_id, @patients, :id, :name,
                  {selected: @sale.patient_id, include_blank: 'Seleccione producto'}, 
                  {class: "form-control"} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

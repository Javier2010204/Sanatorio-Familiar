<div class="panel panel-default">
 <div class="panel-heading">Categorias</div>
 <div class="panel-body">
  <table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Ver', category %> | <%= link_to 'Editar', edit_category_path(category) %> | <%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>>
      </tr>
    <% end %>
  </tbody>
</table>
  <br>
  <div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
   <p>
    <%= button_to new_category_path, {method: :get, class: "btn btn-success"} do %>
     <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nueva Categoria
    <% end %>
   </p>
  </div>
 </div>
</div>